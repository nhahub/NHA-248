{
  "info": {
    "name": "Recruitment_API_Minimal",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "List Candidates",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/v2/recruitment/candidates",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "v2",
            "recruitment",
            "candidates"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status OK', function(){",
              "   pm.expect(pm.response.code).to.be.oneOf([200,201,204]);",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "Add Candidate",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/v2/recruitment/candidates",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "v2",
            "recruitment",
            "candidates"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\"firstName\": \"Ammar\", \"lastName\": \"Test\", \"email\": \"ammar@test.com\"}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status OK', function(){",
              "   pm.expect(pm.response.code).to.be.oneOf([200,201,204]);",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "Delete Candidate",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/v2/recruitment/candidates/{{candidateId}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "v2",
            "recruitment",
            "candidates",
            "{{candidateId}}"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status OK', function(){",
              "   pm.expect(pm.response.code).to.be.oneOf([200,201,204]);",
              "});"
            ]
          }
        }
      ]
    }
  ]
}